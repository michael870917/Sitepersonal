colorfondo = #0ED13E
/*1BB500*/
colortext = #00FF66
azul = #22BCE0
linea = #F9FFFF
azulreal = #00A1F4
rojito = #A90000
gris_oscuro = #444
gris_claro = lighten(gris_oscuro,40%)

body
	font-size 16px
	color colortext

header	
	/*
	primer parametro cuanto se va a mover en x	
	segundo parametro cuanto se va a mover en y	
	tecer parametro cuanto va a ser la difuminacion de la sombra
	cuarto parametro color de la sombra	
	*/
	background colorfondo
	box-shadow 0 5px 0 rgba(black,0.2);	
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 2
	
	h1
		color white
		font-size 1.1em

	.logo
		border-right 3px solid linea		
		float left
		width 60px

		img
			width 52px

		figure
			border 1px dashed invert(colortext)			
			width 50px

	.titular
		margin 0 60px 0 70px		

		.filtro	
			color rojito
			font-size 0.9em
			font-weight bold
			font-style italic
			text-decoration none

		.publicar
			background azulreal
			border-radius 70%
			box-shadow 0px 4px 4px rgba(white,0.7)
			color white
			float right
			font-size 0.9em
			font-style italic
			font-weight bold
			margin -5px 1em 0 0
			padding 0.4em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black

		.titulo
			font-size 1.1em
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px			

		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 2

			img
				border-radius 50%
				width 50px
			
			


nav
	.menu
		background #000
		height 40px
		line-height 35px
		margin 0
		padding 0
		li
			display inline-block

			a
				color white
				display block
				margin 0 0.5em
				margin-top -5px
				padding 0.2em
				text-decoration none

			
				
			
